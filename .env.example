# ==================== GENERAL ====================
NODE_ENV=development

# ==================== JWT CONFIGURATION ====================
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production
JWT_ACCESS_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
BCRYPT_ROUNDS=12

# ==================== DATABASE ====================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lapor_pakdhe

# ==================== REDIS ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== RABBITMQ ====================
RABBITMQ_URL=amqp://admin:admin@localhost:5672

# ==================== MINIO ====================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=reports-media
MINIO_USE_SSL=false

# ==================== SLA CONFIG ====================
SLA_LEVEL1_HOURS=72
SLA_LEVEL2_HOURS=168
# For demo/testing (shorter intervals)
# SLA_LEVEL1_HOURS=0.083
# SLA_LEVEL2_HOURS=0.167

# ==================== SERVICE PORTS (sesuai MASTER_SPEC Section 2.2) ====================
API_GATEWAY_PORT=8080
USER_SERVICE_PORT=8001
REPORT_SERVICE_PORT=8002
NOTIFICATION_SERVICE_PORT=8003
ANALYTICS_SERVICE_PORT=8004
ROUTING_SERVICE_PORT=8005
ESCALATION_SERVICE_PORT=8006
EXTERNAL_INTEGRATION_PORT=8007
WEBSOCKET_PORT=8081
FRONTEND_PORT=3000

# ==================== SERVICE URLS (for API Gateway) ====================
USER_SERVICE_URL=http://localhost:8001
REPORT_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:8003
ANALYTICS_SERVICE_URL=http://localhost:8004
ROUTING_SERVICE_URL=http://localhost:8005
ESCALATION_SERVICE_URL=http://localhost:8006
EXTERNAL_INTEGRATION_URL=http://localhost:8007
WEBSOCKET_URL=http://localhost:8081

# ==================== CORS ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==================== RATE LIMITING ====================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_AUTH_REQUESTS=10

# ==================== CIRCUIT BREAKER ====================
CIRCUIT_BREAKER_TIMEOUT=10000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# ==================== ENCRYPTION (for anonymous reports) ====================
ENCRYPTION_KEY=your-32-character-encryption-key!

# ==================== ESCALATION CONFIG ====================
ESCALATION_CHECK_INTERVAL=300000
# 300000ms = 5 minutes (for demo)
# For production: 3600000 = 1 hour
